                        { id: 1, text: 'V001' }, { id: 2, text: 'V002' }, { id: 3, text: 'V105' }, { id: 4, text: 'V106' }, { id: 5, text: 'V110' },
                        { id: 6, text: 'V11a' }, { id: 7, text: 'V116' }, { id: 8, text: 'S333' }, { id: 9, text: 'S339' }, { id: 10, text: 'Engineering Office' },
                        { id: 11, text: 'Equipment Room' }, { id: 12, text: 'Film Equipment Storage' }, { id: 13, text: 'Green Room' }
                        /*, ...*/
                    ],
                    showSearchInput: true
                }
            },
            {
                id: 'Trades',
                text: 'School of Trades',
                submenu: {
                    items: [
                        { id: 14, text: 'TC02' }, { id: 15, text: 'TC04' }, { id: 16, text: 'TC12' }, { id: 17, text: 'TC14' }, { id: 18, text: 'TC14A' },
                        { id: 19, text: 'TC40' }, { id: 20, text: 'TC42' }, { id: 21, text: 'TC76' }, { id: 22, text: 'TC77' }, { id: 23, text: 'Outside House/Trainer' }
                        /*, ...*/
                    ],
                    showSearchInput: true
                }
            },
            {
                id: 'Technology',
                text: 'School of Technology',
                submenu: {
                    items: [
                        { id: 24, text: 'L116' }, { id: 25, text: 'L117' }, { id: 26, text: 'L118' }, { id: 27, text: 'L119' }, { id: 28, text: 'V111' },
                        { id: 29, text: 'V112' }, { id: 30, text: 'V114' }, { id: 31, text: 'V115' }, { id: 32, text: 'TC33' }, { id: 33, text: 'TC34' },
                        { id: 34, text: 'TC36' }, { id: 35, text: 'TC38' }, { id: 36, text: 'TC65' }
                        /*, ...*/
                    ],
                    showSearchInput: true
                }
            }/*, ...*/],
            placeholder: 'Select a lab...',
            showSearchInputInDropdown: false
        });
    });
    //Bootstrap3DatePicker
    $(function () {
        $('#datetimepicker4').datetimepicker({
            format: 'MM/DD/YYYY'
        });
    });
</script>
<form id="frmInspectionType" action="/InspectionPages/EditInspection">
    <div class="container">
        <br />
        <h2>New Inspection</h2>
        <br />
        <h3>Date:</h3>
        <div class="row">
            <div class='col-sm-6'>
                <input type='text' class="form-control" id='datetimepicker4' style="background-color:#eee;height:40px;width:280px" placeholder="02/06/2017" />
            </div>
        </div>
        <br />
        <h3>Lab:</h3>
        <div class="row">
            <div class='col-sm-6'>
                <div id="ddlLabs" class="selectivity-input" style="width:280px;background-color: #eee;
  background-image: none;
  border: 1px solid #ccc;
  padding-left:5px;
  border-radius: 4px;
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
          box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
  -webkit-transition: border-color ease-in-out .15s, -webkit-box-shadow ease-in-out .15s;
       -o-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
          transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;"></div>
            </div>
        </div>
        <br /><br />
        <input type="submit" class="btn ncBtn" />
        <input type="button" class="btn ncBtn" id="btnCancel" value="Cancel" onclick="window.location='/Home/Index'" />
        <br /><br />
        <div id="recentInspecs" style="display:none">
            <h3>Recent:</h3>
            <ul>
                <li><a href="/InspectionPages/EditInspection">TC14 (School of Trades)</a></li>
                <li><a href="/InspectionPages/EditInspection">L116 (School of Technology)</a></li>
                <li><a href="/InspectionPages/EditInspection">S333 (School of Media)</a></li>
            </ul>
        </div>
    </div>
</form>